<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<groupId>net.anotheria</groupId>
	<artifactId>parent</artifactId>
	<version>1.3</version>
	<packaging>pom</packaging>
	<name>Anotheria Parent POM</name>
	<description>Defines various standards for all Anotheria Maven Projects</description>

	<organization>
		<name>anotheria.net</name>
		<url>http://www.anotheria.net/</url>
	</organization>

	<url>http://infra.anotheria.net/jira/</url>
	<issueManagement>
		<system>JIRA</system>
		<url>http://jira.anotheria.net/jira</url>
	</issueManagement>
	<ciManagement>
		<system>hudson</system>
		<url>http://infra.anotheria.net/hudson</url>
	</ciManagement>

	<scm>
		<url>svn:svn://svn.anotheria.net/parent/tags/parent-1.3</url>
		<connection>scm:svn:svn://svn.anotheria.net/opensource/parent/tags/parent-1.3</connection>
		<developerConnection>scm:svn:svn://svn.anotheria.net/opensource/parent/tags/parent-1.3</developerConnection>
	</scm>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<!--  plugins -->
		<compiler-plugin.version>2.3.2</compiler-plugin.version>
		<surefire-plugin.version>2.6</surefire-plugin.version>
        <checkstyle-plugin.version>2.5</checkstyle-plugin.version>
      	<apt-plugin.version>1.0-alpha-3</apt-plugin.version>
		<tools-anno-plugin.version>1.3.1</tools-anno-plugin.version>
        <cobertura-plugin.version>2.4</cobertura-plugin.version>
        <pmd-plugin.version>2.5</pmd-plugin.version>
        <checkstyle-plugin.version>2.5</checkstyle-plugin.version>
        <findbugs-plugin.version>2.0.1</findbugs-plugin.version>
		
		<!--  dependencies -->
		<log4j.version>1.2.16</log4j.version>
		<junit.version>4.5</junit.version>
	</properties>

	<inceptionYear>2010</inceptionYear>
	<developers>
	</developers>

	<distributionManagement>
		<!-- use the following if you're not using a snapshot version. -->
		<repository>
			<id>ano-release</id>
			<name>Anotheria Release Repository</name>
			<url>http://nexus.anotheria.net/nexus/content/repositories/releases</url>
		</repository>
		<!-- use the following if you ARE using a snapshot version. -->
		<snapshotRepository>
			<id>ano-snapshot</id>
			<name>Anotheria Snapshot Repository</name>
			<url>http://nexus.anotheria.net/nexus/content/repositories/snapshots</url>
		</snapshotRepository>
	</distributionManagement>

<build>
    <!--  <directory>${project.basedir}/build</directory> -->
    <!-- <outputDirectory>${project.build.directory}/classes</outputDirectory> -->
    <finalName>${artifactId}-${version}</finalName>
    <!-- <testOutputDirectory>${project.build.directory}/test-classes</testOutputDirectory> -->
    <sourceDirectory>${project.basedir}/java</sourceDirectory>
    <!-- scriptSourceDirectory>${project.basedir}/sql</scriptSourceDirectory> -->
    <testSourceDirectory>${project.basedir}/test/junit</testSourceDirectory>
    <resources>
      <resource>
        <directory>${project.basedir}/etc/appdata</directory>
      </resource>
    </resources>
    <testResources>
      <testResource>
        <directory>${project.basedir}/test/appdata</directory>
      </testResource>
      <testResource>
        <directory>${project.basedir}/test/junit</directory>
      </testResource>
    </testResources>
    <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-release-plugin</artifactId>
          <configuration>
            <preparationGoals>clean install</preparationGoals>
          </configuration>
        </plugin>
		<plugin>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-compiler-plugin</artifactId>
			<version>${compiler-plugin.version}</version>
		</plugin>
		<plugin>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-compiler-plugin</artifactId>
			<version>${compiler-plugin.version}</version>
			<configuration>
				<source>1.6</source>
				<target>1.6</target>
			</configuration>
	</plugin>
	<plugin>
		<groupId>org.apache.maven.plugins</groupId>
		<artifactId>maven-surefire-plugin</artifactId>
		<version>${surefire-plugin.version}</version>
		<configuration>
			<!--  skip by default - prevent cobertura from double execute -->
			<skip>true</skip><!--  back to true -->
			<includes>
					<include>**/*Test.java</include>
					<include>**/*Suite.java</include>
			</includes>

		</configuration>
			<executions>
		        <execution>
	                <id>unit-tests</id>
	                <phase>test</phase>
	                <goals>
	                        <goal>test</goal>
	                </goals>
	                <configuration>
                        <!-- Never skip running the tests when the test phase is invoked -->
						<skip>false</skip>
						<includes>
							<include>**/*Test.java</include>
							<include>**/*Suite.java</include>
						</includes>
	                </configuration>
		        </execution>
			        <!-- not needed now
			        <execution>
			                <id>integration-tests</id>
			                <phase>integration-test</phase>
			                <goals>
			                        <goal>test</goal>
			                </goals>
			                <configuration>
			                        <! - -
			                                Never skip running the tests when the integration-test phase is
			                                invoked
			                        - - >
			                        <skip>false</skip>
			                        <includes>
			                                <! - - Include integration tests within integration-test phase. - - >
			                                <include>**/*IntegrationTest.java</include>
			                        </includes>
			                </configuration>
			        </execution> -->
			</executions>
	</plugin>
      
      	<!--  checkstyle -->
	  <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-checkstyle-plugin</artifactId>
        <version>${checkstyle-plugin.version}</version>
        <dependencies>
			<dependency>
				<groupId>net.anotheria</groupId>
				<artifactId>ano-buildutils</artifactId>
				<version>1</version>
			</dependency>
		</dependencies>        
      </plugin>
    </plugins>
  </build>	
  <reporting>
  	<plugins>
  	<!--  COBERTURA -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>cobertura-maven-plugin</artifactId>
        <version>${cobertura-plugin.version}</version>
		<configuration>
          <formats>
            <format>html</format>
            <format>xml</format>
          </formats>
        </configuration>
      </plugin>
	
	<!--  PMD  -->
	<plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-pmd-plugin</artifactId>
        <version>${pmd-plugin.version}</version>
		<configuration>
        	<targetJdk>1.6</targetJdk>
	    </configuration>        
    </plugin>
	
	
	<!--  checkstyle -->
	  <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-checkstyle-plugin</artifactId>
        <version>${checkstyle-plugin.version}</version>
        <configuration>
          <enableRulesSummary>false</enableRulesSummary>
           <configLocation>anotheria_checks.xml</configLocation>
        </configuration>
      </plugin>
	
	<!--  findbugs -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>findbugs-maven-plugin</artifactId>
        <version>${findbugs-plugin.version}</version>
        <configuration>
			<findbugsXmlOutput>true</findbugsXmlOutput>
            <findbugsXmlWithMessages>true</findbugsXmlWithMessages>
            <xmlOutput>true</xmlOutput>
		</configuration>
      </plugin>
      
  	</plugins>
  </reporting>
	<dependencies>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>${log4j.version}</version>
		</dependency>
		<dependency>
		  <groupId>junit</groupId>
		  <artifactId>junit</artifactId>
		  <version>${junit.version}</version>
		  <scope>test</scope>
		</dependency>
			
	</dependencies>
</project>